{
	"name": "@jsrepo/monorepo",
	"version": "0.0.0",
	"description": "The monorepo for jsrepo",
	"license": "MIT",
	"packageManager": "pnpm@10.4.1",
	"type": "module",
	"scripts": {
		"build": "pnpm --r --filter '!./playground/**' build",
		"dev": "concurrently -n packages,apps --kill-others=false -c \"blue,green\" \"pnpm --r --parallel --filter '!./playground/**' --filter '!./apps/**' dev\" \"wait-on packages/jsrepo/dist/api/index.js && pnpm -r --parallel --filter './apps/**' dev\"",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --fix && pnpm type:check",
		"type:check": "pnpm -r check",
		"test": "pnpm -r test",
		"changeset-version": "changeset version && pnpm format",
		"ci:release": "pnpm build:packages && changeset publish",
		"postinstall": "pnpm build:packages",
		"build:packages": "pnpm -parallel --filter './packages/*' build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@changesets/cli": "^2.29.7",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"concurrently": "^9.2.1",
		"pkg-pr-new": "^0.0.60",
		"typescript": "^5.9.3",
		"wait-on": "^9.0.1"
	},
	"pnpm": {
		"patchedDependencies": {
			"commander@14.0.1": "patches/commander@14.0.1.patch"
		},
		"onlyBuiltDependencies": [
			"esbuild",
			"msw",
			"sharp"
		]
	}
}