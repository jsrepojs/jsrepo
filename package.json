{
	"name": "@jsrepo/monorepo",
	"version": "0.0.0",
	"description": "The monorepo for jsrepo",
	"license": "MIT",
	"packageManager": "pnpm@10.4.1",
	"type": "module",
	"scripts": {
		"build": "pnpm --r --filter '!./examples/**' build",
		"dev": "concurrently -n packages,apps --kill-others=false -c \"blue,green\" \"pnpm --r --parallel --filter '!./examples/**' --filter '!./apps/**' dev\" \"wait-on packages/jsrepo/dist/api/index.mjs && pnpm -r --parallel --filter './apps/**' dev\"",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --fix && pnpm type:check",
		"type:check": "pnpm -r check",
		"test": "pnpm -r test",
		"changeset:version": "changeset version && pnpm format",
		"ci:release": "pnpm build:packages && changeset publish",
		"postinstall": "pnpm build:packages",
		"build:packages": "pnpm -parallel --filter './packages/*' build",
		"bundle-analyze": "pnpm build:bundle-analyzer && pnpm -r --filter './packages/*' --color=always bundle-analyze",
		"build:bundle-analyzer": "pnpm -F @jsrepo/bundle-analyzer build",
		"build:examples": "pnpm -r --filter './examples/**' build",
		"build:example-registries": "pnpm -r --filter './examples/**' registry:build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@changesets/cli": "^2.29.8",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"concurrently": "catalog:",
		"pkg-pr-new": "^0.0.62",
		"wait-on": "^9.0.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"core-js",
			"esbuild",
			"msw",
			"sharp"
		]
	}
}
