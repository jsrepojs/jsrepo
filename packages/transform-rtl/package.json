{
	"name": "@jsrepo/transform-rtl",
	"description": "A transform plugin for jsrepo to make Tailwind classes RTL-safe.",
	"version": "1.0.0",
	"license": "MIT",
	"homepage": "https://jsrepo.dev",
	"author": {
		"name": "Aidan Bleser",
		"url": "https://github.com/ieedan"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jsrepojs/jsrepo"
	},
	"bugs": {
		"url": "https://github.com/jsrepojs/jsrepo/issues"
	},
	"keywords": [
		"jsrepo",
		"transform",
		"rtl",
		"tailwind",
		"plugin"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"main": "./dist/index.mjs",
	"files": [
		"dist/**/*",
		"!dist/**/*.map"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"check": "tsc --noEmit",
		"bundle-analyze": "FORCE_COLOR=1 node ../../bundle-analyzer/dist/index.mjs analyze ."
	},
	"packageManager": "pnpm@10.17.1",
	"peerDependencies": {
		"jsrepo": "workspace:*"
	},
	"dependencies": {
		"magic-string": "^0.30.21",
		"oxc-parser": "^0.107.0"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	}
}
