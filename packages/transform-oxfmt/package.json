{
	"name": "@jsrepo/transform-oxfmt",
	"description": "A transform plugin for jsrepo to format code with oxfmt.",
	"version": "4.0.0",
	"license": "MIT",
	"homepage": "https://jsrepo.dev",
	"author": {
		"name": "Aleksei Gurianov",
		"url": "https://github.com/guria"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jsrepojs/jsrepo"
	},
	"bugs": {
		"url": "https://github.com/jsrepojs/jsrepo/issues"
	},
	"keywords": [
		"jsrepo",
		"transform",
		"oxfmt",
		"plugin"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"main": "./dist/index.mjs",
	"files": [
		"dist/**/*",
		"!dist/**/*.map"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"check": "tsc --noEmit",
		"bundle-analyze": "FORCE_COLOR=1 pnpx bundle-analyze . --fail-if-exceeds-bytes 500000"
	},
	"packageManager": "pnpm@10.28.2",
	"peerDependencies": {
		"jsrepo": "workspace:*",
		"oxfmt": "0.x"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	}
}
